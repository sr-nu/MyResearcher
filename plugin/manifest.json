{
  "name": "My ReSearcher",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Searches everything from the bookmarked websites",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://jquery.com/*"],
      "js": ["jquery.js", "popup.js"]
    }
  ],
  "permissions": [
    "http://ajax.googleapis.com/",
    "http://localhost:*/*",
    "http://*/*",
    "http://*/",
    "http://*.heroku.com/*",
    "bookmarks",
    "tabs"
  ]
}

